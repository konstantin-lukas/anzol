{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES6",
        "lib": ["ES6", "DOM"],
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "jsx": "react",
        "declaration": true,
        "declarationDir": "dist",
        "sourceMap": true,
        "outDir": "dist",
        "strict": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist", "tests", "app"]
}
